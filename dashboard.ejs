<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guard Bot Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #5865f2;
            --secondary-color: #2c2f33;
            --accent-color: #7289da;
            --success-color: #43b581;
            --danger-color: #f04747;
            --warning-color: #faa61a;
            --dark-bg: #1a1a1a;
            --card-bg: #2a2a2a;
            --text-primary: #ffffff;
            --text-secondary: #b9bbbe;
            --border-color: #404040;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 50%, #16213e 100%);
            color: var(--text-primary);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            height: 100vh;
            width: 280px;
            background: rgba(26, 26, 26, 0.95);
            backdrop-filter: blur(10px);
            border-right: 1px solid var(--border-color);
            z-index: 1000;
            transition: transform 0.3s ease;
        }

        .sidebar-header {
            padding: 20px;
            border-bottom: 1px solid var(--border-color);
            text-align: center;
        }

        .bot-avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            border: 3px solid var(--primary-color);
            margin-bottom: 10px;
        }

        .bot-name {
            font-size: 1.2rem;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 5px;
        }

        .bot-status {
            font-size: 0.9rem;
            color: var(--text-secondary);
        }

        .nav-menu {
            padding: 20px 0;
        }

        .nav-item {
            list-style: none;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 15px 25px;
            color: var(--text-secondary);
            text-decoration: none;
            transition: all 0.3s ease;
            border-left: 3px solid transparent;
        }

        .nav-link:hover {
            background: rgba(88, 101, 242, 0.1);
            color: var(--text-primary);
            border-left-color: var(--primary-color);
        }

        .nav-link.active {
            background: rgba(88, 101, 242, 0.2);
            color: var(--primary-color);
            border-left-color: var(--primary-color);
        }

        .nav-icon {
            width: 20px;
            margin-right: 12px;
            font-size: 1.1rem;
        }

        /* Main Content */
        .main-content {
            margin-left: 280px;
            padding: 20px;
            min-height: 100vh;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding: 20px;
            background: rgba(42, 42, 42, 0.8);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            border: 1px solid var(--border-color);
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .page-title {
            font-size: 2rem;
            font-weight: 700;
            background: linear-gradient(45deg, var(--primary-color), var(--accent-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .server-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .server-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            border: 2px solid var(--primary-color);
        }

        .server-details h4 {
            margin: 0;
            color: var(--text-primary);
        }

        .server-details p {
            margin: 0;
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        .user-actions {
            display: flex;
            align-items: center;
        }

        .logout-btn {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 10px 20px;
            background: linear-gradient(45deg, var(--danger-color), #d32f2f);
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
        }

        .logout-btn:hover {
            background: linear-gradient(45deg, #d32f2f, var(--danger-color));
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(244, 71, 71, 0.3);
            color: white;
            text-decoration: none;
        }

        .logout-btn i {
            font-size: 1rem;
        }

        /* Stats Cards */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: rgba(42, 42, 42, 0.8);
            backdrop-filter: blur(10px);
            border: 1px solid var(--border-color);
            border-radius: 15px;
            padding: 25px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        .stat-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 15px;
        }

        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            color: white;
        }

        .stat-icon.guard {
            background: linear-gradient(45deg, var(--success-color), #2d5a2d);
        }

        .stat-icon.users {
            background: linear-gradient(45deg, var(--primary-color), #2d4a7a);
        }

        .stat-icon.channels {
            background: linear-gradient(45deg, var(--accent-color), #4a2d7a);
        }

        .stat-icon.roles {
            background: linear-gradient(45deg, var(--warning-color), #7a4a2d);
        }

        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-primary);
        }

        .stat-label {
            color: var(--text-secondary);
            font-size: 0.9rem;
            margin-top: 5px;
        }

        /* Quick Actions */
        .quick-actions {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            margin-bottom: 30px;
        }

        .action-card {
            background: rgba(42, 42, 42, 0.8);
            backdrop-filter: blur(10px);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 20px;
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
            text-decoration: none;
            color: var(--text-primary);
        }

        .action-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            border-color: var(--primary-color);
            color: var(--text-primary);
        }

        .action-icon {
            font-size: 2rem;
            margin-bottom: 10px;
            color: var(--primary-color);
        }

        .action-title {
            font-weight: 600;
            margin-bottom: 5px;
        }

        .action-desc {
            font-size: 0.85rem;
            color: var(--text-secondary);
        }

        /* Recent Activity */
        .activity-section {
            background: rgba(42, 42, 42, 0.8);
            backdrop-filter: blur(10px);
            border: 1px solid var(--border-color);
            border-radius: 15px;
            padding: 25px;
        }

        .section-title {
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: 20px;
            color: var(--text-primary);
        }

        .activity-item {
            display: flex;
            align-items: center;
            padding: 15px 0;
            border-bottom: 1px solid var(--border-color);
        }

        .activity-item:last-child {
            border-bottom: none;
        }

        .activity-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            font-size: 1rem;
        }

        .activity-icon.create {
            background: rgba(67, 181, 129, 0.2);
            color: var(--success-color);
        }

        .activity-icon.delete {
            background: rgba(240, 71, 71, 0.2);
            color: var(--danger-color);
        }

        .activity-icon.update {
            background: rgba(250, 166, 26, 0.2);
            color: var(--warning-color);
        }

        .activity-content {
            flex: 1;
        }

        .activity-title {
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 3px;
        }

        .activity-time {
            font-size: 0.85rem;
            color: var(--text-secondary);
        }

        /* Responsive */
        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }

            .sidebar.open {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .quick-actions {
                grid-template-columns: 1fr;
            }
        }

        /* Toggle Button */
        .sidebar-toggle {
            display: none;
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 1001;
            background: var(--primary-color);
            border: none;
            color: white;
            padding: 10px;
            border-radius: 8px;
            cursor: pointer;
        }

        @media (max-width: 768px) {
            .sidebar-toggle {
                display: block;
            }
        }
    </style>
</head>
<body>
    <!-- Mobile Toggle Button -->
    <button class="sidebar-toggle" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <img src="<%= botAvatar %>" alt="Bot Avatar" class="bot-avatar">
            <div class="bot-name"><%= botUsername %></div>
            <div class="bot-status">
                <span id="guardStatus" class="badge <%= guardEnabled ? 'bg-success' : 'bg-danger' %>">
                    <%= guardEnabled ? 'Aktif' : 'Pasif' %>
                </span>
            </div>
        </div>
        
        <ul class="nav-menu">
            <li class="nav-item">
                <a href="/dashboard/<%= guildID %>" class="nav-link active">
                    <i class="fas fa-tachometer-alt nav-icon"></i>
                    Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a href="/guard/<%= guildID %>" class="nav-link">
                    <i class="fas fa-shield-halved nav-icon"></i>
                    Guard Ayarları
                </a>
            </li>
            <li class="nav-item">
                <a href="/logs/<%= guildID %>" class="nav-link">
                    <i class="fas fa-list-alt nav-icon"></i>
                    Log Kayıtları
                </a>
            </li>
            <li class="nav-item">
                <a href="/safe-users/<%= guildID %>" class="nav-link">
                    <i class="fas fa-user-shield nav-icon"></i>
                    Güvenli Kullanıcılar
                </a>
            </li>
            <li class="nav-item">
                <a href="/roles/<%= guildID %>" class="nav-link">
                    <i class="fas fa-user-tag nav-icon"></i>
                    Rol Yönetimi
                </a>
            </li>
            <li class="nav-item">
                <a href="/channels/<%= guildID %>" class="nav-link">
                    <i class="fas fa-hashtag nav-icon"></i>
                    Kanal Yönetimi
                </a>
            </li>
            <li class="nav-item">
                <a href="/bot-settings/<%= guildID %>" class="nav-link">
                    <i class="fas fa-robot nav-icon"></i>
                    Bot Ayarları
                </a>
            </li>
            <li class="nav-item">
                <a href="/settings/<%= guildID %>" class="nav-link">
                    <i class="fas fa-cog nav-icon"></i>
                    Genel Ayarlar
                </a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
                <div class="header">
            <div class="header-left">
                <h1 class="page-title">Dashboard</h1>
                <div class="server-info">
                    <img src="<%= guild.iconURL({ size: 128, extension: 'png' }) || 'https://cdn.discordapp.com/embed/avatars/0.png' %>" alt="Server Icon" class="server-icon" onerror="this.src='https://cdn.discordapp.com/embed/avatars/0.png'">
                    <div class="server-details">
                        <h4><%= guild.name %></h4>
                        <p><%= guild.memberCount %> üye</p>
                    </div>
                </div>
            </div>
            <div class="user-actions">
                <a href="/logout" class="logout-btn">
                    <i class="fas fa-sign-out-alt"></i>
                    Çıkış Yap
                </a>
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon guard">
                        <i class="fas fa-shield-halved"></i>
                    </div>
                </div>
                <div class="stat-value" id="guardStatusValue">
                    <%= guardEnabled ? 'Aktif' : 'Pasif' %>
                </div>
                <div class="stat-label">Guard Durumu</div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon users">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
                <div class="stat-value"><%= guild.memberCount %></div>
                <div class="stat-label">Toplam Üye</div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon channels">
                        <i class="fas fa-hashtag"></i>
                    </div>
                </div>
                <div class="stat-value"><%= guild.channels.cache.size %></div>
                <div class="stat-label">Kanal Sayısı</div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon roles">
                        <i class="fas fa-user-tag"></i>
                    </div>
                </div>
                <div class="stat-value"><%= guild.roles.cache.size %></div>
                <div class="stat-label">Rol Sayısı</div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="quick-actions">
            <a href="/guard/<%= guildID %>" class="action-card">
                <div class="action-icon">
                    <i class="fas fa-shield-halved"></i>
                </div>
                <div class="action-title">Guard Ayarları</div>
                <div class="action-desc">Guard sistemini yapılandır</div>
            </a>

            <a href="/safe-users/<%= guildID %>" class="action-card">
                <div class="action-icon">
                    <i class="fas fa-user-shield"></i>
                </div>
                <div class="action-title">Güvenli Kullanıcılar</div>
                <div class="action-desc">Güvenli kullanıcıları yönet</div>
            </a>

            <a href="/logs/<%= guildID %>" class="action-card">
                <div class="action-icon">
                    <i class="fas fa-list-alt"></i>
                </div>
                <div class="action-title">Log Kayıtları</div>
                <div class="action-desc">Son aktiviteleri görüntüle</div>
            </a>

            <a href="/settings/<%= guildID %>" class="action-card">
                <div class="action-icon">
                    <i class="fas fa-cog"></i>
                </div>
                <div class="action-title">Genel Ayarlar</div>
                <div class="action-desc">Bot ayarlarını düzenle</div>
            </a>
        </div>

        <!-- Recent Activity -->
        <div class="activity-section">
            <h3 class="section-title">Son Aktiviteler</h3>
            <div id="recentActivities">
                <% if (logs && logs.length > 0) { %>
                    <% logs.forEach(log => { %>
                        <div class="activity-item">
                            <div class="activity-icon <%= log.type %>">
                                <% if (log.type === 'create') { %>
                                    <i class="fas fa-plus"></i>
                                <% } else if (log.type === 'delete') { %>
                                    <i class="fas fa-trash"></i>
                                <% } else if (log.type === 'update') { %>
                                    <i class="fas fa-edit"></i>
                                <% } else if (log.type === 'ban') { %>
                                    <i class="fas fa-ban"></i>
                                <% } else if (log.type === 'kick') { %>
                                    <i class="fas fa-user-times"></i>
                                <% } else { %>
                                    <i class="fas fa-info-circle"></i>
                                <% } %>
                            </div>
                            <div class="activity-content">
                                <div class="activity-title"><%= log.description %></div>
                                <div class="activity-time"><%= log.timestamp ? new Date(log.timestamp).toLocaleString('tr-TR') : '-' %></div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="activity-item">
                        <div class="activity-content">
                            <div class="activity-title">Henüz aktivite kaydı yok.</div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('open');
        }

        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(event) {
            const sidebar = document.getElementById('sidebar');
            const sidebarToggle = document.querySelector('.sidebar-toggle');
            
            if (window.innerWidth <= 768) {
                if (!sidebar.contains(event.target) && !sidebarToggle.contains(event.target)) {
                    sidebar.classList.remove('open');
                }
            }
        });
    </script>
</body>
<%- include('layout-blocker.ejs') %>
</html> 