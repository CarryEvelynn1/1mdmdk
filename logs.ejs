<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log Kayıtları - Guard Bot</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #5865f2;
            --secondary-color: #2c2f33;
            --accent-color: #7289da;
            --success-color: #43b581;
            --danger-color: #f04747;
            --warning-color: #faa61a;
            --dark-bg: #1a1a1a;
            --card-bg: #2a2a2a;
            --text-primary: #ffffff;
            --text-secondary: #b9bbbe;
            --border-color: #404040;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 50%, #16213e 100%);
            color: var(--text-primary);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            height: 100vh;
            width: 280px;
            background: rgba(26, 26, 26, 0.95);
            backdrop-filter: blur(10px);
            border-right: 1px solid var(--border-color);
            z-index: 1000;
            transition: transform 0.3s ease;
        }

        .sidebar-header {
            padding: 20px;
            border-bottom: 1px solid var(--border-color);
            text-align: center;
        }

        .bot-avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            border: 3px solid var(--primary-color);
            margin-bottom: 10px;
        }

        .bot-name {
            font-size: 1.2rem;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 5px;
        }

        .bot-status {
            font-size: 0.9rem;
            color: var(--text-secondary);
        }

        .nav-menu {
            padding: 20px 0;
        }

        .nav-item {
            list-style: none;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 15px 25px;
            color: var(--text-secondary);
            text-decoration: none;
            transition: all 0.3s ease;
            border-left: 3px solid transparent;
        }

        .nav-link:hover {
            background: rgba(88, 101, 242, 0.1);
            color: var(--text-primary);
            border-left-color: var(--primary-color);
        }

        .nav-link.active {
            background: rgba(88, 101, 242, 0.2);
            color: var(--primary-color);
            border-left-color: var(--primary-color);
        }

        .nav-icon {
            width: 20px;
            margin-right: 12px;
            font-size: 1.1rem;
        }

        /* Main Content */
        .main-content {
            margin-left: 280px;
            padding: 20px;
            min-height: 100vh;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding: 20px;
            background: rgba(42, 42, 42, 0.8);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            border: 1px solid var(--border-color);
        }

        .page-title {
            font-size: 2rem;
            font-weight: 700;
            background: linear-gradient(45deg, var(--primary-color), var(--accent-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .server-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .server-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            border: 2px solid var(--primary-color);
        }

        .server-details h4 {
            margin: 0;
            color: var(--text-primary);
        }

        .server-details p {
            margin: 0;
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .user-actions {
            display: flex;
            align-items: center;
        }

        .logout-btn {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 10px 20px;
            background: linear-gradient(45deg, var(--danger-color), #d32f2f);
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
        }

        .logout-btn:hover {
            background: linear-gradient(45deg, #d32f2f, var(--danger-color));
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(244, 71, 71, 0.3);
            color: white;
            text-decoration: none;
        }

        .logout-btn i {
            font-size: 1rem;
        }

        /* Filters Section */
        .filters-section {
            background: rgba(42, 42, 42, 0.8);
            backdrop-filter: blur(10px);
            border: 1px solid var(--border-color);
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 30px;
        }

        .filters-header {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .filters-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            background: linear-gradient(45deg, var(--primary-color), #2d4a7a);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            font-size: 1.5rem;
            color: white;
        }

        .filters-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--text-primary);
        }

        .filters-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
        }

        .filter-group {
            display: flex;
            flex-direction: column;
        }

        .filter-label {
            margin-bottom: 8px;
            font-weight: 600;
            color: var(--text-primary);
        }

        .filter-select {
            padding: 10px 15px;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            color: var(--text-primary);
            font-size: 0.9rem;
        }

        .filter-select:focus {
            outline: none;
            border-color: var(--primary-color);
        }

        .filter-select option {
            background: var(--dark-bg);
            color: var(--text-primary);
        }

        .filter-actions {
            display: flex;
            gap: 15px;
            align-items: end;
        }

        .filter-btn {
            background: linear-gradient(45deg, var(--primary-color), #2d4a7a);
            border: none;
            color: white;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .filter-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(88, 101, 242, 0.3);
        }

        .clear-btn {
            background: linear-gradient(45deg, var(--danger-color), #7a2d2d);
        }

        .clear-btn:hover {
            box-shadow: 0 8px 25px rgba(240, 71, 71, 0.3);
        }

        /* Logs Section */
        .logs-section {
            background: rgba(42, 42, 42, 0.8);
            backdrop-filter: blur(10px);
            border: 1px solid var(--border-color);
            border-radius: 15px;
            padding: 25px;
        }

        .logs-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }

        .logs-title {
            font-size: 1.3rem;
            font-weight: 600;
            color: var(--text-primary);
        }

        .logs-count {
            background: rgba(88, 101, 242, 0.2);
            color: var(--primary-color);
            padding: 8px 15px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.9rem;
        }

        /* Log Table */
        .log-table {
            width: 100%;
            border-collapse: collapse;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
            overflow: hidden;
        }

        .log-table th {
            background: rgba(88, 101, 242, 0.2);
            color: var(--text-primary);
            padding: 15px;
            text-align: left;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .log-table td {
            padding: 15px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            font-size: 0.9rem;
        }

        .log-table tr:hover {
            background: rgba(255, 255, 255, 0.05);
        }

        .log-type {
            display: inline-flex;
            align-items: center;
            padding: 4px 8px;
            border-radius: 6px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .log-type.create {
            background: rgba(67, 181, 129, 0.2);
            color: var(--success-color);
        }

        .log-type.delete {
            background: rgba(240, 71, 71, 0.2);
            color: var(--danger-color);
        }

        .log-type.update {
            background: rgba(250, 166, 26, 0.2);
            color: var(--warning-color);
        }

        .log-type.ban {
            background: rgba(240, 71, 71, 0.2);
            color: var(--danger-color);
        }

        .log-type.kick {
            background: rgba(250, 166, 26, 0.2);
            color: var(--warning-color);
        }

        .log-user {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .log-user-avatar {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            border: 2px solid var(--primary-color);
        }

        .log-user-info {
            display: flex;
            flex-direction: column;
        }

        .log-username {
            font-weight: 600;
            color: var(--text-primary);
        }

        .log-userid {
            font-size: 0.8rem;
            color: var(--text-secondary);
            font-family: monospace;
        }

        .log-time {
            color: var(--text-secondary);
            font-size: 0.85rem;
        }

        .log-description {
            color: var(--text-primary);
            line-height: 1.4;
        }

        /* Pagination */
        .pagination-section {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 30px;
            gap: 10px;
        }

        .page-btn {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
            padding: 10px 15px;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .page-btn:hover {
            background: rgba(88, 101, 242, 0.2);
            border-color: var(--primary-color);
        }

        .page-btn.active {
            background: var(--primary-color);
            border-color: var(--primary-color);
        }

        .page-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: var(--text-secondary);
        }

        .empty-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            color: var(--text-secondary);
        }

        .empty-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 10px;
            color: var(--text-primary);
        }

        .empty-description {
            font-size: 1rem;
            line-height: 1.5;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }

            .sidebar.open {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
            }

            .filters-grid {
                grid-template-columns: 1fr;
            }

            .filter-actions {
                flex-direction: column;
            }

            .log-table {
                font-size: 0.8rem;
            }

            .log-table th,
            .log-table td {
                padding: 10px 8px;
            }
        }

        /* Toggle Button */
        .sidebar-toggle {
            display: none;
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 1001;
            background: var(--primary-color);
            border: none;
            color: white;
            padding: 10px;
            border-radius: 8px;
            cursor: pointer;
        }

        @media (max-width: 768px) {
            .sidebar-toggle {
                display: block;
            }
        }
    </style>
</head>
<body>
    <!-- Mobile Toggle Button -->
    <button class="sidebar-toggle" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <img src="<%= botAvatar %>" alt="Bot Avatar" class="bot-avatar">
            <div class="bot-name"><%= botUsername %></div>
            <div class="bot-status">
                <span id="guardStatus" class="badge <%= guardEnabled ? 'bg-success' : 'bg-danger' %>">
                    <%= guardEnabled ? 'Aktif' : 'Pasif' %>
                </span>
            </div>
        </div>
        
        <ul class="nav-menu">
            <li class="nav-item">
                <a href="/dashboard/<%= guildID %>" class="nav-link">
                    <i class="fas fa-tachometer-alt nav-icon"></i>
                    Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a href="/guard/<%= guildID %>" class="nav-link">
                    <i class="fas fa-shield-halved nav-icon"></i>
                    Guard Ayarları
                </a>
            </li>
            <li class="nav-item">
                <a href="/logs/<%= guildID %>" class="nav-link active">
                    <i class="fas fa-list-alt nav-icon"></i>
                    Log Kayıtları
                </a>
            </li>
            <li class="nav-item">
                <a href="/safe-users/<%= guildID %>" class="nav-link">
                    <i class="fas fa-user-shield nav-icon"></i>
                    Güvenli Kullanıcılar
                </a>
            </li>
            <li class="nav-item">
                <a href="/roles/<%= guildID %>" class="nav-link">
                    <i class="fas fa-user-tag nav-icon"></i>
                    Rol Yönetimi
                </a>
            </li>
            <li class="nav-item">
                <a href="/channels/<%= guildID %>" class="nav-link">
                    <i class="fas fa-hashtag nav-icon"></i>
                    Kanal Yönetimi
                </a>
            </li>
            <li class="nav-item">
                <a href="/bot-settings/<%= guildID %>" class="nav-link">
                    <i class="fas fa-robot nav-icon"></i>
                    Bot Ayarları
                </a>
            </li>
            <li class="nav-item">
                <a href="/settings/<%= guildID %>" class="nav-link">
                    <i class="fas fa-cog nav-icon"></i>
                    Genel Ayarlar
                </a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="header">
            <div class="header-left">
                <h1 class="page-title">Log Kayıtları</h1>
                <div class="server-info">
                    <img src="<%= guild.iconURL({ size: 128, extension: 'png' }) || 'https://cdn.discordapp.com/embed/avatars/0.png' %>" alt="Server Icon" class="server-icon" onerror="this.src='https://cdn.discordapp.com/embed/avatars/0.png'">
                    <div class="server-details">
                        <h4><%= guild.name %></h4>
                        <p><%= guild.memberCount %> üye</p>
                    </div>
                </div>
            </div>
            <div class="user-actions">
                <a href="/logout" class="logout-btn">
                    <i class="fas fa-sign-out-alt"></i>
                    Çıkış Yap
                </a>
            </div>
        </div>

        <!-- Filters Section -->
        <div class="filters-section">
            <div class="filters-header">
                <div class="filters-icon">
                    <i class="fas fa-filter"></i>
                </div>
                <div class="filters-title">Filtreler</div>
            </div>
            
            <div class="filters-grid">
                <div class="filter-group">
                    <label class="filter-label">Log Tipi</label>
                    <select class="filter-select" id="logType">
                        <option value="">Tümü</option>
                        <option value="create">Oluşturma</option>
                        <option value="delete">Silme</option>
                        <option value="update">Güncelleme</option>
                        <option value="ban">Ban</option>
                        <option value="kick">Kick</option>
                    </select>
                </div>
                
                <div class="filter-group">
                    <label class="filter-label">Kullanıcı</label>
                    <select class="filter-select" id="logUser">
                        <option value="">Tümü</option>
                        <option value="suspicious">Şüpheli Kullanıcılar</option>
                        <option value="safe">Güvenli Kullanıcılar</option>
                    </select>
                </div>
                
                <div class="filter-group">
                    <label class="filter-label">Tarih Aralığı</label>
                    <select class="filter-select" id="logDate">
                        <option value="">Tümü</option>
                        <option value="today">Bugün</option>
                        <option value="week">Bu Hafta</option>
                        <option value="month">Bu Ay</option>
                    </select>
                </div>
                
                <div class="filter-group">
                    <label class="filter-label">Sıralama</label>
                    <select class="filter-select" id="logSort">
                        <option value="newest">En Yeni</option>
                        <option value="oldest">En Eski</option>
                    </select>
                </div>
            </div>
            
            <div class="filter-actions">
                <button class="filter-btn" onclick="applyFilters()">
                    <i class="fas fa-search"></i> Filtrele
                </button>
                <button class="filter-btn clear-btn" onclick="clearFilters()">
                    <i class="fas fa-times"></i> Temizle
                </button>
            </div>
        </div>

        <!-- Logs Section -->
        <div class="logs-section">
            <div class="logs-header">
                <div class="logs-title">Son Aktiviteler</div>
                <div class="logs-count"><%= logs.length %> kayıt</div>
            </div>

            <% if (logs.length === 0) { %>
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fas fa-list-alt"></i>
                    </div>
                    <div class="empty-title">Henüz log kaydı yok</div>
                    <div class="empty-description">
                        Guard sistemi aktif olduğunda burada aktivite kayıtlarını görebileceksiniz.
                    </div>
                </div>
            <% } else { %>
                <div class="table-responsive">
                    <table class="log-table">
                        <thead>
                            <tr>
                                <th>Tip</th>
                                <th>Kullanıcı</th>
                                <th>Açıklama</th>
                                <th>Tarih</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% logs.forEach(log => { %>
                                <tr>
                                    <td>
                                        <span class="log-type <%= log.type %>">
                                            <i class="fas fa-<%= getLogIcon(log.type) %>"></i>
                                            <%= getLogTypeName(log.type) %>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="log-user">
                                            <img src="<%= log.userAvatar ? `https://cdn.discordapp.com/avatars/${log.userId}/${log.userAvatar}.png` : 'https://cdn.discordapp.com/embed/avatars/0.png' %>" 
                                                 alt="User Avatar" class="log-user-avatar"
                                                 onerror="this.src='https://cdn.discordapp.com/embed/avatars/0.png'">
                                            <div class="log-user-info">
                                                <div class="log-username"><%= log.username || '-' %></div>
                                                <div class="log-userid"><%= log.userId || '-' %></div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="log-description"><%= log.description %></div>
                                    </td>
                                    <td>
                                        <div class="log-time"><%= log.timestamp ? new Date(log.timestamp).toLocaleString('tr-TR') : '-' %></div>
                                    </td>
                                    <td>
                                        <span class="log-type <%= log.status === 'blocked' ? 'delete' : 'create' %>">
                                            <%= log.status === 'blocked' ? 'Engellendi' : 'İzin Verildi' %>
                                        </span>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="pagination-section">
                    <button class="page-btn" onclick="changePage(-1)" id="prevBtn">
                        <i class="fas fa-chevron-left"></i> Önceki
                    </button>
                    
                    <span class="page-info" style="color: var(--text-secondary);">
                        Sayfa <span id="currentPage">1</span> / <span id="totalPages">1</span>
                    </span>
                    
                    <button class="page-btn" onclick="changePage(1)" id="nextBtn">
                        Sonraki <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('open');
        }

        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(event) {
            const sidebar = document.getElementById('sidebar');
            const sidebarToggle = document.querySelector('.sidebar-toggle');
            
            if (window.innerWidth <= 768) {
                if (!sidebar.contains(event.target) && !sidebarToggle.contains(event.target)) {
                    sidebar.classList.remove('open');
                }
            }
        });

        function applyFilters() {
            const logType = document.getElementById('logType').value;
            const logUser = document.getElementById('logUser').value;
            const logDate = document.getElementById('logDate').value;
            const logSort = document.getElementById('logSort').value;
            
            // Burada filtreleme işlemi yapılacak
            console.log('Filtreler uygulanıyor:', { logType, logUser, logDate, logSort });
            
            // Gerçek uygulamada bu parametrelerle sayfa yeniden yüklenecek
            // window.location.href = `/logs/<%= guildID %>?type=${logType}&user=${logUser}&date=${logDate}&sort=${logSort}`;
        }

        function clearFilters() {
            document.getElementById('logType').value = '';
            document.getElementById('logUser').value = '';
            document.getElementById('logDate').value = '';
            document.getElementById('logSort').value = 'newest';
        }

        function changePage(direction) {
            const currentPage = parseInt(document.getElementById('currentPage').textContent);
            const totalPages = parseInt(document.getElementById('totalPages').textContent);
            const newPage = currentPage + direction;
            
            if (newPage >= 1 && newPage <= totalPages) {
                // Burada sayfa değiştirme işlemi yapılacak
                console.log('Sayfa değiştiriliyor:', newPage);
                // window.location.href = `/logs/<%= guildID %>?page=${newPage}`;
            }
        }

        // Helper functions for log display
    </script>
</body>
<%- include('layout-blocker.ejs') %>
</html> 